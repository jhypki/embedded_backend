generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Image {
  id         Int      @id @default(autoincrement())
  filepath   String
  filename   String
  uploadedAt DateTime @default(now())
  mimeType   String
  label      String?
}

model Activation {
  id          Int      @id @default(autoincrement())
  activatedAt DateTime @default(now())
  deviceID    String
}
